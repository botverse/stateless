{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react",
    "prettier/react"
  ],
  "plugins": [
    "babel",
    "prettier"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__COVERAGE__" : false,
    "__BASENAME__" : false
  },
  "rules": {
    "max-len": [2, 80, 2],
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "es6",
    }]
  }
}
